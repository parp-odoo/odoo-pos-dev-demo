<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_urban_piper.DebugWidget" t-inherit="point_of_sale.DebugWidget" t-inherit-mode="extension">
        <xpath expr="//div[@data-tooltip='Delete all indexed DB']" position="after">
            <div t-if="showUrbanPiperTestOrderBtn and pos.productsToDisplay" data-tooltip="Place Quick UrbanPiper Test Order" data-tooltip-delay="0">
                <button class="btn btn-secondary btn-sm text-nowrap" t-on-click="placeUrbanPiperQuickTestOrder">
                    <i class="fa fa-flash" aria-hidden="true"></i> Quick Order
                </button>
            </div>
        </xpath>
    </t>
</templates>
